<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#356980"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amit.locationotifier.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txta"
        android:textSize="19dp"
        android:layout_marginTop="18dp"
        android:textColor="#ffff09"
        android:text="Enter address"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txta"
        android:layout_marginLeft="9dp"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/address"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="click to add destination"
        android:id="@+id/button"
        android:layout_marginTop="28dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txta" />


</RelativeLayout>
